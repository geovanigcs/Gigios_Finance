# Dockerfile para desenvolvimento com hot reload
FROM node:20-alpine

WORKDIR /app

# Instalar dependências do sistema
RUN apk add --no-cache libc6-compat

# Copiar arquivos de dependências e schema do Prisma
COPY package.json package-lock.json* ./
COPY prisma ./prisma

# Instalar dependências (o postinstall já roda prisma generate)
RUN npm install

# Copiar o restante dos arquivos
COPY . .

# Expor porta
EXPOSE 3000

# Comando de desenvolvimento com hot reload
CMD ["npm", "run", "dev"]
